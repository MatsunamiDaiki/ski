.all  
  .sidebar
    .box
      .sidename
        =@area.name
      .sideaddres
        ="住所: #{@area.addres}"
      .sidetel
        ="TEL: #{@area.tel}"
      .sideadult
        ="大人: #{@area.adult_price}円"
      .pricechild
        ="小人: #{@area.child_price}円"   
  .commentsfield
    .commentbox
      .commenttop
        %h4 ＜レビュー 一覧＞
      .comments  
      - if @comments
        - @comments.each do |comment|
          .commnetname
            ="ユーザー名: #{comment.user.name}"
          .commentdate  
            = comment.created_at.strftime("%Y年%m月%d日 %H時%M分")
          .commentcontent  
            = comment.text
    - if current_user
      .form
        = form_with(model: [@area, @comment], local: true, id: "new_comment") do |form|
          = form.text_area :text, placeholder: "レビュー投稿", rows: "2" ,class: "textbox"
          = form.submit "SEND", class: "form__submit"
